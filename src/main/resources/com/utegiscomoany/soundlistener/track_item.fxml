<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>

<HBox fx:id="trackBox" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="450.0"
      style="-fx-background-color: #3a3a3a; -fx-background-radius: 5; -fx-padding: 5 10; -fx-spacing: 10;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">

    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#4a4a4a" height="40.0" strokeType="INSIDE" width="40.0" />

    <Label fx:id="trackName" style="-fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;"
           text="Track Name" HBox.hgrow="ALWAYS" />

    <Label fx:id="trackDuration" style="-fx-text-fill: #aaaaaa; -fx-font-size: 12;" text="0:00" />
</HBox>