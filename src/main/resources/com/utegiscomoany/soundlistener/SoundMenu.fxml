<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Button?>
<VBox prefHeight="700.0" prefWidth="740.0" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utegiscomoany.soundlistener.MainController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <Menu mnemonicParsing="false" text="Open Recent" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Close" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
            <MenuItem mnemonicParsing="false" text="Revert" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About SoundListener" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane fx:id="mainPane" maxHeight="-1.0" maxWidth="-1.0"
                prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS"
                style="-fx-background-color: #f5f5f5;">

      <!-- Панель управления -->
      <HBox layoutX="0.0" layoutY="0.0" prefHeight="40.0" prefWidth="740.0"
            style="-fx-background-color: #2c3e50; -fx-alignment: center-left; -fx-padding: 0 10;">
        <Button fx:id="playButton" mnemonicParsing="false" text="Play"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button fx:id="pauseButton" mnemonicParsing="false" text="Pause"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-margin: 0 10;"/>
        <Slider fx:id="volumeSlider" prefWidth="150.0"
                style="-fx-margin: 0 10;"/>
      </HBox>

      <!-- Контейнер для треков -->
      <FlowPane fx:id="musicContainer" layoutX="0.0" layoutY="40.0"
                prefHeight="660.0" prefWidth="740.0"
                style="-fx-padding: 20; -fx-hgap: 20; -fx-vgap: 20;"/>

      <!-- Label для drag-and-drop -->
      <Label fx:id="dropLabel" alignment="CENTER" layoutX="337.0" layoutY="324.0"
             text="Переместите свою музыку сюда" textAlignment="CENTER"
             textFill="#9f9f9f" wrapText="false">
        <font>
          <Font size="18.0" />
        </font>
      </Label>
    </AnchorPane>
  </children>
</VBox>